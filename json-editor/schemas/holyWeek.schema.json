{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "holyWeek.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "service": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": { "type": "string" }
      },
      "hours": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "hour": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": { "type": "string" }
            },
            "sections": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "tables": {
                    "type": "array",
                    "items": {
                      "$ref": "https://liturgicalbooks/schemas/common/table_base.schema.json#/items"
                    }
                  }
                },
                "required": ["title", "tables"],
                "additionalProperties": true
              }
            }
          },
          "required": ["hour", "sections"],
          "additionalProperties": true
        }
      }
    },
    "required": ["service", "hours"],
    "additionalProperties": true
  }
}
